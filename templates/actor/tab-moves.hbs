<section class="tab scrollable flexrow {{tabs.moves.id}} {{tabs.moves.cssClass}}" data-group="{{tabs.moves.group}}" data-tab="{{tabs.moves.id}}">
    <div class="basic-moves flexcol flex-group-center">
        <div class="flexrow flex0">
            <h3>{{localize "interstitial.label.character_sheet.basic_moves"}}</h3>
        </div>
        <ul class="move-list flexcol flex-group-center">
            {{#each basic_moves as |move move_key|}}
            <li class="item draggable flexcol move flex1" data-item-id="{{move._id}}">
                <div class="move-container flexrow" style="flex-basis: 100%;">
                    <a class="roll-move flexcol flex1" data-action="rollMove">
                        <img class="move-img" src="{{move.img}}" title="{{move.name}}" height="50" width="50"/>
                        {{#if move.roll_icon}}
                            <img class="move-roll-img" src="{{move.roll_icon}}" title="Roll" height="30" width="30"/>
                        {{/if}}
                    </a>
                    <div class="flexcol flex3 move-desc">
                        <h4 class="move-name">{{move.name}}</h4>
                        {{editor move.system.prompt target="move.system.prompt" owner=owner editable=false}}
                    </div>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="playbook-moves flexcol flex-group-center">
        <div class="flexrow flex0">
            <h3>{{localize "interstitial.label.character_sheet.playbook_moves"}}</h3>
        </div>
        <ul class="move-list flexcol flex-group-center">
            {{#each playbook_moves as |move move_key|}}
            <li class="item draggable flexcol move flex1" data-item-id="{{move._id}}">
                <div class="move-container flexrow" style="flex-basis: 100%;">
                    <a class="roll-move flexcol flex1" data-action="rollMove">
                        <img class="move-img" src="{{move.img}}" title="{{move.name}}" height="50" width="50"/>
                        {{#if move.roll_icon}}
                            <img class="move-roll-img" src="{{move.roll_icon}}" title="Roll" height="30" width="30"/>
                        {{/if}}
                    </a>
                    <div class="flexcol flex3 move-desc">
                        <h4 class="move-name">{{move.name}}</h4>
                        {{editor move.system.prompt target="move.system.prompt" owner=owner editable=false}}
                    </div>
                    <div class="item-controls flex1">
                        <a class="item-control item-edit" data-action="editItem" title="{{localize "DOCUMENT.Edit" type=(localize "interstitial.move_type.playbook")}}"><i class="fas fa-edit"></i></a>
                        <a class="item-control item-delete" data-action="deleteItem" title="{{localize "DOCUMENT.Delete" type=(localize "interstitial.move_type.playbook")}}"><i class="fas fa-trash"></i></a>
                    </div>
                </div>
            </li>
            {{/each}}
            <li class="item flexrow flex0 new-move">
                <div class="item-controls">
                    <a class="item-control item-create" data-action="createItem" title="{{localize "DOCUMENT.Create" type=(localize "interstitial.move_type.playbook")}}" data-type="move" data-move_type="playbook"><i class='fas fa-plus'></i>{{localize 'DOCUMENT.New' type=(localize "interstitial.move_type.playbook")}}</a>
                </div>
            </li>
        </ul>
    </div>
</section>