<section class="tab scrollable {{tabs.inventory.id}} {{tabs.inventory.cssClass}}" data-group="{{tabs.inventory.group}}" data-tab="{{tabs.inventory.id}}">
    <div class="inventory flexcol flex-group-center">
        <ul class="inventory-list flexcol flex-group-center">
            {{#each inventory as |item|}}
            <li class="item flexrow move flex1" data-item-id="{{item._id}}">
                <div class="item-container flexrow" style="flex-basis: 100%;">
                    <div class="flexcol flex1">
                        <img class="item-img" src="{{item.img}}" title="{{item.name}}" height="30" width="30"/>
                    </div>
                    <div class="flexcol flex3">
                        <label class="item-name">{{item.name}}</label>
                    </div>
                    <div class="item-controls flex1">
                        <a class="item-control item-edit" data-action="editItem" title="{{localize "DOCUMENT.Edit" type=(localize "TYPES.Item.item")}}"><i class="fas fa-edit"></i></a>
                        <a class="item-control item-delete" data-action="deleteItem" title="{{localize "DOCUMENT.Delete" type=(localize "TYPES.Item.item")}}"><i class="fas fa-trash"></i></a>
                    </div>
                </div>
            </li>
            {{/each}}
            <li class="item flexrow flex0 new-item">
                <div class="item-controls">
                    <a class="item-control item-create" data-action="createItem" title="{{localize "DOCUMENT.Create" type=(localize "TYPES.Item.item")}}" data-type="item"><i class='fas fa-plus'></i>{{localize 'DOCUMENT.New' type=(localize "TYPES.Item.item")}}</a>
                </div>
            </li>
        </ul>
    </div>
</section>